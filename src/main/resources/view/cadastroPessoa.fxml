<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@css/basicStyle.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.dev.control.views.CadastroPessoaController">
    <center>
    <VBox alignment="CENTER_LEFT"
          spacing="10"
          styleClass="vbox-background"
          minWidth="200"
          maxWidth="600"
          maxHeight="250"
          >
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
            <Label fx:id="warning" alignment="CENTER" text="" />
            <HBox alignment="CENTER" spacing="10">
                <Label  prefWidth="200.0" styleClass="titulo" text="Nome" />
                <TextField fx:id="nomeField" prefWidth="200.0" promptText="Nome" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Label prefWidth="200.0" styleClass="titulo" text="Data De Nascimento" />
                <TextField fx:id="diaNascimento" prefWidth="60.0" promptText="Dia" />
                <TextField fx:id="mesNascimento" prefWidth="60.0" promptText="Mes" />
                <TextField fx:id="anoNascimento" prefWidth="60.0" promptText="Ano" />
            </HBox>
            <HBox alignment="CENTER" spacing="10">
                <Button fx:id="cadastrar" onAction="#cadastrar" text="Cadastrar" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
