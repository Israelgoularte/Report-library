                    </Menu>
                    <Menu text="Help">

                    </Menu>
                </MenuBar>
            </HBox>
            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" prefHeight="26.0" prefWidth="295.0" text="Aplicativos" textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Label>

            </HBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <MenuBar prefHeight="26.0" prefWidth="165.0">
                    <Menu text="Usuario">
                        <MenuItem onAction="#dadosUsuario" text="Dados do Usuario" />
                        <MenuItem onAction="#logout" text="Sair" />
                    </Menu>
                </MenuBar>
            </HBox>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" maxWidth="1200">
            <content>
                <VBox fx:id="centralBox" maxWidth="1200" spacing="10">
                    <padding>
                        <Insets bottom="10" left="30" right="30" top="10" />
                    </padding>
                </VBox>
            </content>
        </ScrollPane>
