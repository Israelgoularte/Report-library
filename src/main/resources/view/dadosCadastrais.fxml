<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane
            xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1"
            stylesheets="@css/basicStyle.css"
            fx:controller="org.dev.control.views.DadosCadastraisController">
    <top>
        <HBox fx:id="topBox" styleClass="vbox-background" HBox.hgrow="ALWAYS">
            <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <MenuBar prefHeight="26.0" prefWidth="163.0">
                    <Menu text="Navegação">
                        <MenuItem text="Todos os Links" onAction="#voltar"/>
                        <MenuItem text="Novo Link" onAction="#adicionarLink"/>

                    </Menu>
                    <Menu text="Help">

                    </Menu>
                </MenuBar>
            </HBox>
            <HBox alignment="CENTER" HBox.hgrow="ALWAYS">
                <Label alignment="CENTER" prefHeight="26.0" prefWidth="295.0" text="Dados Pessoais"
                       textAlignment="CENTER">
                    <font>
                        <Font name="System Bold" size="16.0"/>
                    </font>
                </Label>

            </HBox>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <MenuBar prefHeight="26.0" prefWidth="165.0">
                    <Menu text="Usuario">
                        <MenuItem text="Sair" onAction="#sair"/>
                    </Menu>
                </MenuBar>
            </HBox>
        </HBox>
    </top>

    <center>
        <HBox alignment="CENTER" maxWidth="800">

            <TabPane tabClosingPolicy="UNAVAILABLE">
                <tabs>
                    <Tab text="Identificação">
                        <content>
                            <ScrollPane fitToWidth="true" fitToHeight="true">
                                <content>
                                    <VBox fx:id="identificacaoBox"
                                          maxWidth="700"
                                          alignment="TOP_CENTER"
                                          spacing="20"
                                          styleClass="vbox-background">
                                        <padding>
                                            <Insets left="10" right="10" top="20" bottom="10"/>
                                        </padding>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0" text="Nome"/>
                                            <TextField fx:id="nomeField" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>

                                        <HBox spacing="10" alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0"
                                                   text="Data Nascimento"/>
                                            <Label prefWidth="30.0" styleClass="titulo" text="Dia"/>
                                            <TextField fx:id="diaNascimento" prefWidth="60.0" promptText="Dia"/>
                                            <Label prefWidth="30.0" styleClass="titulo" text="Mes"/>
                                            <TextField fx:id="mesNascimento" prefWidth="60.0" promptText="Mes"/>
                                            <Label prefWidth="30.0" styleClass="titulo" text="Ano"/>
                                            <TextField fx:id="anoNascimento" prefWidth="60.0" promptText="Ano"/>
                                        </HBox>
                                    </VBox>
                                </content>
                            </ScrollPane>
                        </content>
                    </Tab>

                    <Tab text="Contato">
                        <content>
                            <ScrollPane fitToWidth="true" fitToHeight="true">
                                <content>
                                    <VBox fx:id="contatosBox"
                                          maxWidth="700"
                                          alignment="TOP_CENTER"
                                          spacing="20"
                                          styleClass="vbox-background">
                                        <padding>
                                            <Insets left="10" right="10" top="20" bottom="10"/>
                                        </padding>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0" text="Email"/>
                                            <TextField fx:id="email" editable="false" prefHeight="20.0"
                                                       prefWidth="300.0"/>
                                        </HBox>
                                        <padding>
                                            <Insets top="20.0"/>
                                        </padding>
                                    </VBox>
                                </content>
                            </ScrollPane>
                        </content>
                    </Tab>

                    <Tab text="Endereço">
                        <content>
                            <ScrollPane fitToWidth="true" fitToHeight="true" >
                                <content>
                                    <VBox fx:id="endereçoBox"
                                          maxWidth="700"
                                          alignment="TOP_CENTER"
                                          spacing="20"
                                          styleClass="vbox-background"
                                          visible="false"
                                    >
                                        <padding>
                                            <Insets left="10" right="10" top="20" bottom="10"/>
                                        </padding>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0" text="Cep"/>
                                            <TextField fx:id="cep" prefHeight="20.0" prefWidth="300.0">
                                                <padding>
                                                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                                </padding>
                                                <HBox.margin>
                                                    <Insets/>
                                                </HBox.margin>
                                            </TextField>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0" text="Rua"/>
                                            <TextField fx:id="rua" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0"
                                                   text="Numero"/>
                                            <TextField fx:id="numero" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0"
                                                   text="Complemento"/>
                                            <TextField fx:id="complemento" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0"
                                                   text="Bairro"/>
                                            <TextField fx:id="bairro" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0"
                                                   text="Cidade"/>
                                            <TextField fx:id="cidade" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0"
                                                   text="Estado"/>
                                            <TextField fx:id="estado" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <HBox alignment="CENTER">
                                            <Label alignment="CENTER" prefHeight="18.0" prefWidth="120.0" text="Pais"/>
                                            <TextField fx:id="pais" prefHeight="20.0" prefWidth="300.0"/>
                                        </HBox>
                                        <padding>
                                            <Insets top="20.0"/>
                                        </padding>
                                    </VBox>
                                </content>
                            </ScrollPane>
                        </content>
                    </Tab>
                </tabs>
            </TabPane>
        </HBox>

    </center>

    <bottom>
        <HBox fx:id="buttonBox" alignment="CENTER" spacing="20">
            <Button onAction="#voltar" prefWidth="120.0" text="Voltar"/>
            <Button onAction="#editarCadastro" prefWidth="120.0" text="Editar Cadastro">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Button>
            <BorderPane.margin>
                <Insets bottom="5.0" top="10.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="5.0" top="5.0"/>
            </padding>
        </HBox>
    </bottom>

</BorderPane>
